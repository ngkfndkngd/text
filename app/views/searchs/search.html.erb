<div class="container-fluid">
  <div class="row mt-5">
      <% if @datas.empty?%>
      <div class="col-12 my-4 text-center">
        <h2>該当するレシピはありません</h2>
      </div>
      <% end %>
    <div class="col-12">
      <div class="texts-wrapper">
        <div class="contents-title text-center">
          <h4 class="my-1">検索結果</h4>
            <div class="row my-5">
              <div class="col-12">
                <div class="card-deck">
                  <% @datas.each do |data| %>
                    <div class="col-3 my-3">
                        <div class="card h-100">
                          <%= link_to recipe_path(data.id) do %>
                            <%= attachment_image_tag data, :recipe_image, :fill, 200, 200, class:"card-img-search"; %><br>
                          <% end %>
                          <div class="card-body">
                            <div class="row">
                              <div class="col-2">
                                <%= attachment_image_tag data.user, :profile_image,:fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle" %>
                              </div>
                              <div class="col-10">
                                <p class="card-title">
                                  <%= link_to recipe_path(data.id) do %>
                                    <span><%= data.name %></span>
                                  <% end %>
                                </p>
                                <p class="card-text">
                                  <%= link_to user_path(data.user.id) do %>
                                    <span><i class="fas fa-user"></i><%= data.user.name %></span>
                                  <% end %>
                                </p>
                              </div>
                            </div>
                          </div>
                        </div>
                    </div>
                  <% end %>
                </div>
                <div class="m-5">
                  <%= paginate @datas %>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>